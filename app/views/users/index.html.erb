<%= page_heading "Utilisateurs" %>

<h1>Utilisateurs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Mot de passe</th>
      <th>Mail</th>
      <th>Admin</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.password %></td>
        <td><%= user.mail %></td>
        <td><%= user.admin %></td>
        <td>
            <%= link_to 'Afficher', user, class: 'btn btn-success' %>
            <%= link_to 'Modifier', edit_user_path(user), class: 'btn btn-primary' %>
            <%= link_to 'Supprimer', user, class: 'btn btn-danger', method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="form-group">
    <%= link_to 'Créer un utilisateur', new_user_path, class: 'btn btn-success' %>
</div>